<?php
// ---- PHP ENCRYPT/DECRYPT ----
function derive_key($password) {
    return hash('sha256', $password, true); // 32-byte key
}

function encrypt_file($fileTmp, $password) {
    $data = file_get_contents($fileTmp);
    $key = derive_key($password);
    $iv = random_bytes(16);
    $ciphertext = openssl_encrypt($data, "AES-256-CBC", $key, OPENSSL_RAW_DATA, $iv);
    return $iv. $ciphertext; // prepend IV
}

function decrypt_file($fileTmp, $password) {
    $data = file_get_contents($fileTmp);
    $iv = substr($data, 0, 16);
    $ciphertext = substr($data, 16);
    $key = derive_key($password);
    return openssl_decrypt($ciphertext, "AES-256-CBC", $key, OPENSSL_RAW_DATA, $iv);
}

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $action = $_POST['action'] ?? '';
    $password = $_POST['key'] ?? '';
    $file = $_FILES['file']['tmp_name'] ?? null;
    $name = $_FILES['file']['name'] ?? 'download.bin';

    if ($file && $password) {
        if ($action === 'encrypt') {
            $output = encrypt_file($file, $password);
            header("Content-Disposition: attachment; filename=\"encrypted_" . $name . "\"");
            header("Content-Type: application/octet-stream");
            echo $output;
            exit;
        } elseif ($action === 'decrypt') {
            $output = decrypt_file($file, $password);
            if ($output === false) {
                die("<p style='color:red'> Wrong key or corrupted file.</p>");
            }
            header("Content-Disposition: attachment; filename=\"decrypted_" . $name . "\"");
            header("Content-Type: application/octet-stream");
            echo $output;
            exit;
        }
    }
}
?>
